{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    // "rootDirs": ["./src", "./test"],
    "rootDirs": ["./src", "./test"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  // should be removed if rootDirs is not commented
  "exclude": ["test", "./migrations"]
}
